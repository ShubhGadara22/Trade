{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "requirePragma": false,
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "htmlWhitespaceSensitivity": "ignore"
            }
        },
        {
            "files": "*.css",
            "options": {
                "printWidth": 100,
                "tabWidth": 4
            }
        },
        {
            "files": "*.js",
            "options": {
                "printWidth": 80,
                "tabWidth": 4,
                "singleQuote": true
            }
        }
    ]
}